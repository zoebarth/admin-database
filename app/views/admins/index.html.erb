<div class="container">
  <div class="row justify-content-center">
    <h1>List of Admin Users</h1>
  </div>

  <div class="row justify-content-center">
    <h4> <%= link_to 'Create New Admin', new_admin_invitation_path%> </h4>
  </div>

  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>First Name </th>
        <th>Last Name </th>
        <th>Email </th>
      </tr>
    </thead>
    <tbody>
      <% @admins.each do |user| %>
        <tr>
          <td> <%=user.first_name%> </td>
          <td> <%=user.last_name%> </td>
          <td> <%=user.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>