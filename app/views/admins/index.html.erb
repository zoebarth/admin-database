<div class="container" style = "margin-top: 10px">
  <div class="row justify-content-center">
    <h1>List of Admin Users</h1>
  </div>

  <div class="row justify-content-center">
    <a class = 'btn btn-outline-primary btn-lg' href="<%=new_admin_invitation_path%>" role=“button”> Create New Admin </a>
  </div>

  <div style="margin-top: 20px">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>First Name </th>
          <th>Last Name </th>
          <th>Email </th>
        </tr>
      </thead>
      <tbody>
        <% @admins.each do |user| %>
          <tr>
            <td> <%=user.first_name%> </td>
            <td> <%=user.last_name%> </td>
            <td> <%=user.email %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>