<div class="container">
  <div class="row justify-content-center">
    <h1>Admin List of Bodies of Water</h1>
  </div>

  <div class="row justify-content-center">
    <h4> <%= link_to "Create New Body of Water", new_body_path %> </h4>
  </div>

  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Latitude, Longitude</th>
        <th>Description</th>
        <th>Fish Species Present </th>
      </tr>
    </thead>
    <tbody>
      <% @bodies.each do |body| %>
      <tr>
        <td width="20%"> <%= link_to body.name, body_path(body)%> </td>
        <td width="25%"> <%= body.latitude%>, <%= body.longitude%> </td>
        <td> <%= body.description.truncate(100) %> </td>
        <td width="18%"> <%= body.populations.count %> species</td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>