<div class="container margin-top--10">
  <div class="row justify-content-center">
    <h1>Admin List of Bodies of Water</h1>
  </div>

  <div class="row justify-content-center">
    <a class = 'btn btn-outline-primary btn-lg' href="<%=new_body_path%>" role=“button”> Create New Body of Water </a>
  </div>

  <div class="margin-top--20">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Latitude, Longitude</th>
          <th>Description</th>
          <th>Fish Species Present </th>
        </tr>
      </thead>
      <tbody>
        <% @bodies.each do |body| %>
        <tr>
          <td width="20%"> <%= link_to body.name, body_path(body)%> </td>
          <td width="25%"> <%= body.latitude%>, <%= body.longitude%> </td>
          <td> <%= body.description.truncate(100) %> </td>
          <td width="18%"> <%= body.populations.count %> species</td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>