<div class="container">
  <p id="notice"><%= notice %></p>

  <h1><%= @body.name %></h1>

  <h5> Latitude: </h5>
  <p>  <%= @body.latitude %> </p>

  <h5> Longitude:</h5>
  <p>  <%= @body.longitude %> </p>

  <h5> Description: </h5>
  <p> <%= @body.description %></p> 

  <h5> Fish found here: </h5>
  <% if (@body.populations.count > 0) %>
    <% @body.populations.each do |population| %>
      <p> <%= link_to population.fish.name, fish_path(population.fish) %>: <%= population.amount %></p>
    <% end %>
  <% else %>
    <p> None found </p>
  <% end %>


  <%= link_to 'Edit', edit_body_path(@body) %> | 
  <%= link_to 'Bodies of Water List', bodies_path %> 
</div>